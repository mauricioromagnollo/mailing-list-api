{
  "name": "mailing-list-api",
  "version": "1.0.0",
  "description": "An open source case study of an API developed using Node.js and TypeScript, using Clean Architecture.",
  "author": "Maur√≠cio Romagnoli <x0n4d0>",
  "license": "MIT",
  "main": "index.js",
  "homepage": "https://github.com/x0n4d0/mailing-list-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x0n4d0/mailing-list-api.git"
  },
  "bugs": {
    "url": "https://github.com/x0n4d0/mailing-list-api/issues"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "clean-architecture",
    "api"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests --noStackTrace --runInBand",
    "test:unit": "npm test -- -c jest.config.unit.js",
    "test:unit:watch": "npm test -- --watch -c jest.config.unit.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
